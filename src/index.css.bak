@tailwind base;
@tailwind components;
@tailwind utilities;

/* Definition of the design system. All colors, gradients, fonts, etc should be defined here. 
All colors MUST be HSL.
*/

@layer base {
  :root {
    --background: 0 0% 100%;
    --foreground: 217 19% 27%;

    --card: 0 0% 100%;
    --card-foreground: 217 19% 27%;

    --popover: 0 0% 100%;
    --popover-foreground: 217 19% 27%;

    /* Primary CTA - Teal/Cyan */
    --primary: 182 49% 56%;
    --primary-foreground: 0 0% 100%;
    
    /* Secondary CTA - Orange */
    --secondary: 17 100% 59%;
    --secondary-foreground: 0 0% 100%;

    /* Subtle gray for muted elements */
    --muted: 210 20% 96%;
    --muted-foreground: 217 10% 50%;

    /* Accent for highlights */
    --accent: 211 92% 43%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 100%;

    --border: 214 20% 90%;
    --input: 214 20% 90%;
    --ring: 211 92% 43%;

    --radius: 0.5rem;

    /* Hero gradient */
    --gradient-hero: linear-gradient(135deg, hsl(211 92% 43%) 0%, hsl(211 82% 53%) 100%);
    
    /* Subtle section background */
    --section-subtle: 210 25% 98%;
    
    /* Success green for outcomes */
    --success: 142 71% 45%;
    --success-foreground: 0 0% 100%;
  }

  .dark {
    --background: 217 19% 15%;
    --foreground: 0 0% 95%;

    --card: 217 19% 18%;
    --card-foreground: 0 0% 95%;

    --popover: 217 19% 18%;
    --popover-foreground: 0 0% 95%;

    --primary: 182 49% 56%;
    --primary-foreground: 0 0% 100%;

    --secondary: 17 100% 59%;
    --secondary-foreground: 0 0% 100%;

    --muted: 217 19% 25%;
    --muted-foreground: 217 10% 65%;

    --accent: 186 76% 55%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 62% 50%;
    --destructive-foreground: 0 0% 100%;

    --border: 217 19% 30%;
    --input: 217 19% 30%;
    --ring: 211 92% 55%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
  }
}

